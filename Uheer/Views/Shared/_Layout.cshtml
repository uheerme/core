<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpg" href="@Url.Content("~/Content/favicon.png")" />

    <title>@(ViewBag.Title ?? "Uheer")</title>

    @Styles.Render("~/Design/theme")
    @Styles.Render("~/Design/override")
    @Scripts.Render("~/code/modernizr")
</head>
<body ng-app="UheerApp">
    <div class="navbar navbar-inverse navbar-fixed-top" ng-controller="NavbarController">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/#/" class="navbar-brand">
                    <img src="~/Content/uheer-logo.png" class="pull-left" style="width:50px; margin-right:.5em" />
                    <span class="pull-right">Uheer</span>
                </a>
            </div>
            <div class="navbar-collapse collapse pull-right">
                <ul class="nav navbar-nav">
                    <li ng-show="a.isAuth" class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" 
                           aria-haspopup="true" aria-expanded="false">{{a.UserName}} <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#account">Profile</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="#" ng-click="exit()">Log out</a></li>
                        </ul>
                    </li>
                    <li ng-hide="a.isAuth"><a href="#sign">Sign in</a></li>
                    <li><a href="/Help" target="_blank">API</a></li>
                </ul>
            </div>
        </div>
    </div>
    <br />

    <div class="view-container">
        @RenderBody()
    </div>

    <br />
    <footer>
        <div class="container">
            <p>
                <span class="glyphicon glyphicon-copyright-mark"></span>
                @DateTime.Now.Year - Uheer
            </p>
        </div>
    </footer>

    @Scripts.Render("~/code/jquery")
    @Scripts.Render("~/code/bootstrap")
    @Scripts.Render("~/code/uheerapp")
    @RenderSection("scripts", required: false)
</body>
</html>
